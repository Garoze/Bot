{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "Node",
        "strict": true,
        "noImplicitAny": true,
        "declaration": false,
        "skipLibCheck": true,
        "strictNullChecks": true,
        "resolveJsonModule": true,
        "outDir": "dist",
        "typeRoots": ["src/@types", "node_modules/@types"],
        "baseUrl": ".",
    },
    "include": ["src", "src/**/*.ts"],
    "exclude": ["node_modules", "build"]
}
